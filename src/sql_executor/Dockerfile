FROM node:alpine

ARG INSTRUCTION
ENV INSTRUCTION=${INSTRUCTION}

ENV POSTGRES_HOST=localhost
ENV POSTGRES_PORT=5431
ENV POSTGRES_USER=aladin
ENV POSTGRES_PASSWORD=aladin
ENV POSTGRES_DB=aladin
ENV LOG_LEVEL=debug

WORKDIR /app

COPY ./dist/ .

ENTRYPOINT node ./sql_executor/Executor.js $INSTRUCTION